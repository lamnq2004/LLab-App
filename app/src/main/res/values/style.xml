<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Theme.MaterialComponents.Light">
        <item name="iconPadding">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:minWidth">10dp</item>
        <item name="android:minHeight">10dp</item>
    </style>

    <style name="CircleButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/circle</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomMaterialDatePicker" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimary">@color/red</item>
    </style>

</resources>